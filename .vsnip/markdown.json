	// 	"body": [
	// 		"console.log('$1');",
	// 		"$2"
	// 	],
	// 	"description": "Log output to console"
	// }
	"add image to markdown content": {
		"prefix": "addimg",
		"body": [
			"<img loading=\"lazy\" width=\"730\" src=\"/images/post/$1\" alt=\"$2\" style=\"width: 100%;height: auto;\"/>"
		],
		"description": "add image to markdown content"
	},
	"add video to markdown content": {
		"prefix": "addvideo",
		"body": [
			"<video width=\"730\" controls style=\"width: 100%;height: auto;\">",
			"\t<source src=\"$1\" type=\"video/mp4\">",
			"\t您的浏览器不支持本视频",
			"</video>"
		],
		"description": "add image to markdown content"
	},
	"add reference": {
		"prefix": "addref",
		"body": [
			"[$1]({{< ref \"/blog/$2\" >}} \" \")"
		],
		"description": "add reference link"
	}





}